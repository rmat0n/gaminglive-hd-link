{
    "name": "Gaming Live HD link",
    "version": "1.0",
    "manifest_version": 2,

    "description": "Extension permettant d'ajouter un lien de téléchargement HD sur les vidéos Gaming Live de Jeux-Video.com",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
        "tabs"
    ],
    "page_action": {
        "default_icon": "icon48.png"
    },
    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts":[{
        "matches": ["http://www.jeuxvideo.com/gaming-live/*"],
        "js": ["jquery-1.7.2.js", "link.js"],
        "run_at": "document_start",
        "all_frames": true
    }]
}
